{
    "manifest_version": 3,
    "name": "Bookmark Semantic Search",
    "version": "1.0",
    "description": "Semantic search through Google Chrome bookmarks using natural language.",
    "permissions": [
        "bookmarks"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup_width": 400,
        "default_popup_height": 600
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}